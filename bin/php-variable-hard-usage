#!/usr/bin/env php
<?php

declare(strict_types=1);

foreach ([__DIR__ . '/../../../autoload.php', __DIR__ . '/../vendor/autoload.php'] as $file) {
    if (file_exists($file)) {
        require $file;
        break;
    }
}

use Smeghead\PhpVariableHardUsage\Command;

$command = new Command();
$command->run($argv);